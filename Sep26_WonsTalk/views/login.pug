extends layout

block content
    body
        div(data-role="page" id="loginPage")
            div(data-role="content" id="loginCtt" align="center")
                table#mainTb
                    tr
                        td(align="center")
                            img#mainImg(src="/img/wt_logo.png")
                    tr
                        td(align="center")
                            input#l_id(placeholder="ID")
                            input#l_pw(placeholder="PW" type="password")
                    tr
                        td
                            a#l_Submit(href="#mainPage" data-role="button" data-transition="slideup") 로 그 인
                            a(href="#joinPage" data-role="button" data-transition="slidedown") 회원가입
            div(data-role="footer" data-position="fixed")
                h1 MADE BY DWM

        div#joinPage(data-role="page")
            div(data-role="header" data-position="fixed")
                a(href="#loginPage" data-role="button" data-icon="arrow-l" data-transition="flow") 나가기
                h1 회원가입
            div(data-role="content")
                table#joinTb
                    tr
                        td
                            h5= "아이디    "
                                span#idCheck= "[ID입력]"
                            input#j_id
                            h5= "비밀번호"
                            input#j_pw(type="password")
                    tr
                        td
                            a#j_submit(data-role="button" data-transition="slideup") 회원가입
            div(data-role="footer" data-position="fixed")
                h1 MADE BY DWM

        div#mainPage(data-role="page")
            div(data-role="header" data-position="fixed")
                a(href="#loginPage" data-role="button" data-icon="arrow-l" data-transition="flow") 나가기
                h1
                a(href="#loginPage" data-role="button" data-icon="arrow-r" data-transition="flow") 로그아웃
            div(data-role="content" align="center")
                table#mainTb
                    tr
                        td(align="center") ~님 반갑습니다
