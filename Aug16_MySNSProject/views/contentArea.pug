extends memberTitle

block contentArea
    #homeBd
        if !post
            div#noPostDiv
                img(src="/img/wonsta.jpg")
                br
                span 게시물 없음
        else
            table#postTb
                each pst, index in post
                    if (index % 3 != 0)
                        - continue
                    tr
                        td.postTd(align="center")
                            if post.length-1 >= index
                                a(class="postATag" + post[index].id href="/post/show?id=" + post[index].id + "&wp_id=" + post[index].wp_id)
                                    img#postImg(src=post[index].wp_img)
                                    div.middle="♥ "
                                        span.likeCntSpan= "0 개  ☆ "
                                        span.repleCntSpan 0 개
                        td.postTd(align="center")
                            if post.length-1 >= index+1
                                a(class="postATag" + post[index+1].id href="/post/show?id=" + post[index+1].id + "&wp_id=" + post[index+1].wp_id)
                                    img#postImg(src=post[index+1].wp_img)
                                    div.middle="♥ "
                                        span.likeCntSpan= "0 개  ☆ "
                                        span.repleCntSpan 0 개
                        td.postTd(align="center")
                            if post.length-1 >= index+2
                                a(class="postATag" + post[index+2].id href="/post/show?id=" + post[index+2].id + "&wp_id=" + post[index+2].wp_id)
                                    img#postImg(src=post[index+2].wp_img)
                                    div.middle="♥ "
                                        span.likeCntSpan= "0 개  ☆ "
                                        span.repleCntSpan 0 개